#!/bin/sh
set -e

if [ "$AWS_ID" == "" ]; then
  echo "must set AWS_ID"
  exit 1
fi

if [ "$AWS_SECRET" == "" ]; then
  echo "must set AWS_SECRET"
  exit 1
fi

if [ "$S3_BUCKET" == "" ]; then
  echo "must set S3_BUCKET"
  exit 1
fi

basedir="$( cd -P "$( dirname "$0" )" && pwd )"
filename=$( basename "$1" )

# upload geos to s3
$basedir/aws/s3 put $S3_BUCKET $filename $1

# generate manifest
$basedir/manifest geos
